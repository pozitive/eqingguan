!!! 5
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = favicon_link_tag
    %title= title
    %meta{ name: 'keywords', content: meta_keywords } 
    %meta{ name: 'description', content: meta_description }
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    = render "layouts/topbar"
    = content_for?(:hero) ? yield(:hero) : render("layouts/hero")
    %main{class: controller_name}
      .row 
        .small-12.medium-3.columns
          = content_for?(:navbar) ? yield(:navbar) : render("layouts/navbar")
        .small-12.medium-9.columns
          = yield
    = content_for?(:bottom) ? yield(:bottom) : render("layouts/bottom")
    = render "layouts/footer"
    = render "layouts/analytics"

    = javascript_include_tag "application", "data-turbolinks-track" => true

